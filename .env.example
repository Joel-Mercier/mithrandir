# Docker Setup Configuration
# Customize these values as needed

# User and Group IDs for Docker containers
PUID=1000
PGID=1000

# Timezone
TZ=Etc/UTC

# Base directory for all Docker app folders
# Leave empty to be prompted during setup
BASE_DIR=

# Local IP address (auto-detected if not set)
LOCAL_IP=

# DuckDNS Configuration
DUCKDNS_SUBDOMAINS=
DUCKDNS_TOKEN=

# WireGuard Configuration
WG_SERVERURL=
WG_PEERS=1

# Navidrome Spotify Configuration
ND_SPOTIFY_ID=
ND_SPOTIFY_SECRET=

# Auto-yes mode (skip prompts)
# Set to 'true' to automatically accept all prompts
AUTO_YES=false

# Backup Configuration
BACKUP_DIR=/backups
LOCAL_RETENTION=5
REMOTE_RETENTION=10
RCLONE_REMOTE=gdrive
APPS=auto

RCLONE_GDRIVE_APP_ID=
RCLONE_GDRIVE_APP_SECRET=
